{{#ui-fieldset as |fs|}}
  <div class="compound-component
              {{if fs.states.focus 'compound-component--active'}}
              {{if (and hasValue (not fs.states.focus)) 'compound-component--show-value'}}">
    <div class="compound-component--label" {{action "focusIn"}}>
      Full Name
    </div>
    <div class="compound-component--fields compound-component--fields-flex">
      {{#fs.field as |f|}}
        {{#f.label}}
          First Name
        {{/f.label}}
        {{f.input value=firstName}}
      {{/fs.field}}

      {{#fs.field as |f|}}
        {{#f.label}}
          MI
        {{/f.label}}
        {{f.input value=middleName}}
      {{/fs.field}}

      {{#fs.field as |f|}}
        {{#f.label}}
          Last Name
        {{/f.label}}
        {{f.input value=lastName}}
      {{/fs.field}}
    </div>
    <div class="compound-component--value"  {{action "focusIn"}}>
      {{#fs.field as |f|}}
        {{#f.label}}
          Full Name
        {{/f.label}}
        {{firstName}} {{middleName}} {{lastName}}
      {{/fs.field}}
    </div>
  </div>
{{/ui-fieldset}}
